<xml>

<!-- Android TOOLS -------------------------------------->

<include name="gcc-toolchain.xml"/>

<path name="${ANDROID_NDK_ROOT}/toolchains/arm-linux-androideabi-4.4.3/prebuilt/${ANDROID_HOST}/arm-linux-androideabi/bin"/>
<path name="${ANDROID_NDK_ROOT}/toolchains/arm-linux-androideabi-4.4.3/prebuilt/${ANDROID_HOST}/libexec/gcc/arm-linux-androideabi/4.4.3"/>

<!-- no 7a for now ... -->
<set name="cpp-eabi" value="armeabi"/>

<compiler id="android-gcc" exe="g++.exe" if="android">

 <!-- These must appear in this order! -->
 <flag value="-I${ANDROID_NDK_ROOT}/toolchains/arm-linux-androideabi-4.4.3/prebuilt/${ANDROID_HOST}/lib/gcc/arm-linux-androideabi/4.4.3/include/"/>
 <flag value="-I${ANDROID_NDK_ROOT}/platforms/android-5/arch-arm/usr/include/"/>
 <flag value="-I${ANDROID_NDK_ROOT}/sources/cxx-stl/gnu-libstdc++/libs/${cpp-eabi}/include"/>
 <flag value="-I${ANDROID_NDK_ROOT}/sources/cxx-stl/gnu-libstdc++/include/"/>
 <flag value="-I${ANDROID_NDK_ROOT}/sources/cxx-stl/gnu-libstdc++/include/tr1"/>

 <flag value="-I${HXCPP}/include"/>
 <flag value="-Iinclude"/>
 <flag value="-fpic"/>
 <flag value="-fvisibility=hidden"/>
 <flag value="-ffunction-sections"/>
 <flag value="-funwind-tables"/>
 <flag value="-fstack-protector"/>
 <flag value="-fno-short-enums"/>
 <cppflag value="-frtti"/>
 <flag value="-D__ARM_ARCH_5__"/>
 <flag value="-D__ARM_ARCH_5T__"/>
 <flag value="-D__ARM_ARCH_5E__"/>
 <flag value="-D__ARM_ARCH_5TE__"/>
 <flag value="-Wno-psabi"/>
 <flag value="-march=armv5te"/>
 <flag value="-mtune=xscale"/>
 <flag value="-msoft-float"/>
 <flag value="-fomit-frame-pointer"/>
 <flag value="-fno-strict-aliasing"/>
 <flag value="-finline-limit=10000"/>
 <flag value="-DANDROID"/>
 <!-- todo <flag value="-Werror"/> -->
 <flag value="-Wa,--noexecstack"/>
 <flag value="-O2" unless="debug"/>
 <flag value="-O0" if="debug"/>
 <flag value="-DNDEBUG"/>
 <flag value="-c"/>
 <outflag value="-o"/>
 <ext value=".obj"/>
 <objdir value="obj/Debug" if="debug"/>
 <objdir value="obj/Release" unless="debug"/>
</compiler>

<!-- -Wl,-soname,libgl2jni.so
-->
<linker id="dll" exe="g++" if="android">

  <ext value=".so"/>
  <outflag value="-o"/>
  <prefix value="lib"/>

  <flag value="-frtti"/>
  <flag value="-nostdlib"/>
  <flag value="-Wl,-shared,-Bsymbolic"/>
  <flag value="-Wl,--whole-archive"/>
  <flag value="-Wl,--no-whole-archive"/>
  <flag value="-Wl,--no-undefined"/>
  <flag value="-Wl,-z,noexecstack"/>
  <flag value="-L${ANDROID_NDK_ROOT}/sources/cxx-stl/gnu-libstdc++/libs/armeabi"/>
  <flag value="-L${ANDROID_NDK_ROOT}/toolchains/arm-linux-androideabi-4.4.3/prebuilt/${ANDROID_HOST}/lib/gcc/arm-linux-androideabi/4.4.3/"/>

  <flag value="-L${ANDROID_NDK_ROOT}/platforms/android-5/arch-arm/usr/lib"/>
  <lib name="-llog"/>
  <lib name="-ldl"/>
  <lib name="${ANDROID_NDK_ROOT}/sources/cxx-stl/gnu-libstdc++/libs/armeabi/libstdc++.a"/>
  <lib name="-lm"/>
  <lib name="-lc"/>

  <!-- <flag value="-lGLESv2"/> -->
</linker>


</xml>

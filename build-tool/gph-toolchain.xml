<xml>

<!-- GPH (Caanoo) TOOLS -------------------------------------------------->
	

<error value="Please define GPH_ROOT" unless="GPH_ROOT"/>

<path name="${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/bin/"/>
<path name="${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/libexec/gcc/arm-gph-linux-gnueabi/4.2.4/"/>
<path name="${GPH_ROOT}/libexec/gcc/arm-gph-linux-gnueabi/4.2.4"/>
<path name="${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/bin"/>
<setenv name="CYGWIN" value="nodosfilewarning"/>

<compiler id="gph" exe="arm-gph-linux-gnueabi-gcc.exe">
	<flag value="-c"/>
	<flag value="-g" if="debug"/>
	<flag value="-O2" unless="debug"/>
	<flag value="-s" unless="debug"/>
	<flag value="-I${HXCPP}/include"/>
	<flag value="-I${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/usr/include/"/>
	<flag value="-I${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/include/c++/4.2.4/"/>
	<flag value="-I${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/include/c++/4.2.4/arm-gph-linux-gnueabi"/>
	<flag value="-DGPH"/>
	<flag value="-fvisibility=hidden"/>
	<flag value="-fdollars-in-identifiers"/>
	<flag value="-mfloat-abi=softfp"/>
	<cppflag value="-frtti"/>
	<flag value="-fpic"/>
	<flag value="-fPIC"/>
	<outflag value="-o"/>
	<objdir value="./obj/Debug" if="debug"/>
	<objdir value="./obj/Release" unless="debug"/>
</compiler>

<linker id="exe" exe="arm-gph-linux-gnueabi-gcc.exe">
	<flag value="-g" if="debug"/>
	<flag value="-O2" unless="debug"/>
	<flag value="-s" unless="debug"/>
	<flag value="-DGPH"/>
	<flag value="-rdynamic"/>
	<flag value="-Wl,--allow-shlib-undefined"/>
	<flag value="-Wl,-L${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/usr/lib/"/>
	<!--
	<flag value="-lSDL"/>
	<flag value="-lSDL_image"/>
	<flag value="-lGLES_CM"/> -->
	<outflag value="-o"/>
</linker>
	
<linker id="dll" exe="arm-gph-linux-gnueabi-ld.exe">
	<flag value="-s" unless="debug"/>
	<flag value="${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/usr/lib/crti.o"/>
	<flag value="${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/lib/libc.so.6"/>
	<flag value="${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/lib/libgcc_s.so"/>
	<flag value="-L${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/usr/lib"/>
	<flag value="-L${GPH_ROOT}/gcc-4.2.4-glibc-2.7-eabi/arm-gph-linux-gnueabi/sys-root/lib"/>
	<flag value="-lm"/>
	<flag value="-ldl"/>
	<flag value="-lz"/>
	<flag value="-lfreetype"/>
	<flag value="-lstdc++"/>
	<flag value="-lsupc++"/>
	<flag value="--no-undefined"/>
	<!-- <flag value="-print-search-dirs"/> -->
	<flag value="-fpic"/>
	<flag value="-fPIC"/>
	<cppflag value="-frtti"/>
	<flag value="-shared"/>
	<ext value=".so"/>
	<outflag value="-o"/>
</linker>



</xml>
